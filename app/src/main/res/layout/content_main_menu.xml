<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="redjthorn.slacklog.MainMenuActivity"
    tools:showIn="@layout/activity_main_menu"
    android:orientation="vertical">

    <TextView
        android:id="@+id/SelectedWorkspaceText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Default Text"
        android:textSize="30sp"
        android:paddingBottom="20pt"/>

    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:id="@+id/all_user_graph" />

    <Button
        android:id="@+id/updateButton"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Update"
        />

    <Button
        android:id="@+id/viewUsersButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/viewUsersButtonLabel"/>

    <Button
        android:id="@+id/recentLoginsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/viewRecentLoginsButtonLabel"/>

    <Button
        android:id="@+id/viewKeyButton"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/viewKeyButtonLabel"
        />


</LinearLayout>
